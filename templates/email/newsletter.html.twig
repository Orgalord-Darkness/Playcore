    {% for game in videoGames %}
      <div class="game-highlight">
        {% if game.coverImage %}
          <img src="{{ asset('assets/cover/' ~ game.coverImage) }}" 
            alt="Image de {{ game.title }}" style="max-width: 300px; height: auto;"
            style="width: 100%; 
              max-width: 400px; 
              height: 400px; 
              display: block; 
              margin-bottom: 1em; 
              border-radius: 8px;" 
           />
        {% endif %}
        
        <h3>ðŸŽ® {{ game.title }}</h3>
        <p>{{ game.description }}</p>
        <p><strong>Date de sortie :</strong> {{ game.releaseDate|date('d/m/Y') }}</p>
        {% if game.editor %}
          <p><strong>Ã‰diteur :</strong> {{ game.editor.name }}</p>
        {% endif %}
    </div>
